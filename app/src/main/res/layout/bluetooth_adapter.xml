<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="wrap_content">


    <TextView
            android:id="@+id/tv_bluetooth_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="name"
            app:layout_constraintStart_toEndOf="@+id/tv_bluetooth_num"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/guideline4"
            app:layout_constraintEnd_toStartOf="@+id/tv_bluetooth_address"
            app:layout_constraintHorizontal_weight="2.0"/>

    <TextView
            android:id="@+id/tv_bluetooth_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="address"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_bluetooth_state"
            app:layout_constraintBottom_toTopOf="@+id/guideline4"
            app:layout_constraintStart_toEndOf="@+id/tv_bluetooth_name"
            app:layout_constraintHorizontal_weight="2.0"/>
    <TextView
            android:text="num"
            android:layout_height="wrap_content"
            android:id="@+id/tv_bluetooth_num"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/guideline4" app:layout_constraintHorizontal_weight="1.0"
            android:layout_width="0dp" app:layout_constraintEnd_toStartOf="@+id/tv_bluetooth_name"
            app:layout_constraintHorizontal_chainStyle="spread"
    android:gravity="center"/>
    <TextView
            android:text="state"
            android:layout_height="wrap_content"
            android:id="@+id/tv_bluetooth_state" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="0dp"
            app:layout_constraintHorizontal_weight="1.0"
            app:layout_constraintStart_toEndOf="@+id/tv_bluetooth_address"
    />
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintGuide_begin="39dp" android:id="@+id/guideline4"/>
</android.support.constraint.ConstraintLayout>