<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@mipmap/panel_bg">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="同桌五子棋"
              android:textSize="24sp"
              android:textStyle="bold"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintHorizontal_chainStyle="spread"
              android:layout_marginTop="44dp"
              app:layout_constraintHorizontal_bias="0.501" android:id="@+id/textView2"/>
    <Button
            android:text="人人对战"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_pp" android:background="@color/_fff4a4"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_pm"
            app:layout_constraintHorizontal_bias="0.496" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintVertical_bias="0.589"/>
    <Button
            android:text="蓝牙对战"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_blue"
            android:background="@color/_fff4a4"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_pm" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btn_rank"/>
    <Button
            android:text="人机对战"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_pm" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:background="@color/_fff4a4" app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintTop_toBottomOf="@+id/btn_pp"
            app:layout_constraintBottom_toTopOf="@+id/btn_blue" android:layout_marginTop="15dp"/>
    <TextView
            android:text="积分"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_integral" android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="15dp"/>
    <Button
            android:text="风云榜"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_rank" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:background="@color/_fff4a4" app:layout_constraintHorizontal_bias="0.501"
            android:layout_marginTop="15dp" app:layout_constraintTop_toBottomOf="@+id/btn_blue"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline"/>
    <android.support.constraint.Guideline
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="357dp" android:id="@+id/guideline"/>

</android.support.constraint.ConstraintLayout>